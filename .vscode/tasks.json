{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build (g++)",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++20",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/tm2.cpp",
				"-o",
				"${workspaceFolder}/bin/tm2"
			],
			"options": {
				"cwd": "${workspaceFolder}/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}